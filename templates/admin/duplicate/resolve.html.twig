{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Resolve Duplicate{% endblock %}

{% block page_content %}
    <div class="container-fluid">
        <form>
            <div class="row">
                <div class="col-xl-4 offset-xl-2 col-lg-6">
                    <div class="card px-4 mb-2">
                        <div class="card-body">
                            <span class="fw-semibold">Name</span>
                            <p>Blah</p>
                            <span class="fw-semibold">Description</span>
                            <p>n/a</p>
                            <span class="fw-semibold">Location</span>
                            <iframe class="d-block w-100 mb-4"
                                    height="300"
                                    src="https://www.openstreetmap.org/export/embed.html?marker=#(clinic.latitude)%2c#(clinic.longitude)"
                            ></iframe>
                            <span class="fw-semibold">Source</span>
                            <p>Erin Reed</p>
                            <span class="fw-semibold">Imported On</span>
                            <p>December 1, 2022</p>
                        </div>
                        <div class="d-flex flex-row justify-content-center mb-2">
                            <input type="radio" id="radioClinic1" name="clinicToKeep" value="1" required>
                            <label for="radioClinic1" class="mx-2 mb-0 text-center">
                                <strong>Keep this clinic</strong>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6">
                    <div class="card px-4 mb-2">
                        <div class="card-body">
                            <span class="fw-semibold">Name</span>
                            <p>Blah</p>
                            <span class="fw-semibold">Description</span>
                            <p>n/a</p>
                            <span class="fw-semibold">Location</span>
                            <iframe class="d-block w-100 mb-4"
                                    height="300"
                                    src="https://www.openstreetmap.org/export/embed.html?marker=#(clinic.latitude)%2c#(clinic.longitude)"
                            ></iframe>
                            <span class="fw-semibold">Source</span>
                            <p>Erin Reed</p>
                            <span class="fw-semibold">Imported On</span>
                            <p>December 1, 2022</p>
                        </div>
                        <div class="d-flex flex-row justify-content-center mb-2">
                            <input type="radio" id="radioClinic2" name="clinicToKeep" value="2">
                            <label for="radioClinic2" class="mx-2 mb-0 text-center">
                                <strong>Keep this clinic</strong>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="d-flex justify-content-center my-2">
                        <button class="btn btn-primary" type="submit">Keep Selected</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
