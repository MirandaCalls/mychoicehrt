{#
Parameters:
* searchForm (object) : Symfony form object
#}
<div class="search-form p-3 p-lg-1 ps-lg-4">
    {{ form_start(searchForm) }}
    <div class="row">
        <div class="d-flex align-items-center right-divider col-lg-3 col-xxl-2">
            {{ form_widget(searchForm.countryCode, {'attr': {'class': 'border-0 shadow-0'}}) }}
        </div>
        <div class="d-flex align-items-center right-divider col-lg-2 col-xxl-3">
            {{ form_widget(searchForm.searchRadius, {'attr': {'class': 'border-0 shadow-0'}}) }}
        </div>
        <div class="d-flex align-items-center right-divider col-lg-3">
            {{ form_widget(searchForm.searchType, {'attr': {'class': 'border-0 shadow-0'}}) }}
        </div>
        <div class="d-flex align-items-center col-lg-2 col-xxl-3">
            {{ form_widget(searchForm.searchText, {'attr': {'class': 'border-0 shadow-0'}}) }}
        </div>
        <div class="d-grid col-lg-2 col-xxl-1">
            {{ form_widget(searchForm.submit, {'attr': {'class': 'rounded-pill btn-primary'}}) }}
        </div>
    </div>
    {{ form_end(searchForm) }}
</div>
